#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <limits.h>
#include <locale.h>
#include <ctype.h>

void cabecalho () {
  system("clls || clear");
  printf("== SENAI ==\n");
  fflush(stdin);
}

int main() {
  cabecalho();
  int i, numero, soma = 0;

  for(i = 1; i <= 5; i++) {
  printf("Digite o %iº número: ", i);
  scanf("%i",&numero);
  
  soma += numero;
 }

  printf("A soma de todos os números é: %i", soma);

  return 0;
}
