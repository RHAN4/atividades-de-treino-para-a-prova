#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <limits.h>
#include <locale.h>
#include <ctype.h>

void cabecalho () {
  system("clls || clear");
  printf("== SENAI ==\n");
  fflush(stdin);
}

int main() {
cabecalho();
setlocale(LC_ALL, "");
  int numero, i = 1;

  printf("Digite um n√∫mero: ");
  scanf("%d",&numero);
  printf("IMPARES \tPARES\n");
  while (i <= numero) {
   if (i % 2 == 1)
     printf("    %d \t", i);
   else 
     printf("    \t %d\n", i);
  i++;
 }
    return 0;
}